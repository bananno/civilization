
<div id="game-header">
    <ul>
        <li>Civilization</li>
        <li>Turn: <%= game.turn %></li>
        <li><%= game.name %></li>
        <li><a href="/exitGame">load different game</a></li>
        <li onClick="showPlayersList(true)">players</li>
    </ul>

    <form action="/endTurn" method="POST">
        <button type="submit">end turn for <%= players[game.nextPlayer].name %></button>
    </form>
</div>

<div id="players-box">
    <div class="close" onClick="showPlayersList(false)">
        X
    </div>

    <p>
        <b>Players:</b>
    </p>

    <ul>
        <% players.forEach((player, i) => { %>
            <li>
                <%= player.name %>
                <% if (game.nextPlayer === i) { %>
                    (TURN)
                <% }%>
            </li>
        <% }); %>
    </ul>
</div>
